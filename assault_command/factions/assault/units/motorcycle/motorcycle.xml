<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="125" regeneration="1"/>
		<max-ep value="9" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="infantry"/>				
		<sight value="15"/>
		<time value="10"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="experenced" kills="4"/>
			<level name="veteran" kills="8"/>
			<level name="elite" kills="16"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>
		<properties>
			<property value="rotated_climb"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="150"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/motorcycle.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">	
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="25" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="10"/>
			<animation path="biker/bikerstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="600"/>
			<anim-speed value="300"/>
			<animation path="biker/bikerrun.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="3"/>
			<speed value="240"/>
			<anim-speed value="240"/>
			<animation path="biker/bikershoot.g3d"/>
			    <particles value="true" start-time="0.01" end-time="0.11">	
				<particle-file path="cannon_particles.xml"/>
				</particles>
			<sound enabled="true" start-time="0.1">
				<sound-file path="/sounds/grenade.wav"/>

			</sound>
			<attack-strenght value="2"/>
			<attack-var value="2"/>
			<attack-range value="6"/>
			<attack-type value="hmg"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="false"/>
			</projectile>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>


		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="30"/>
			<animation path="biker/bikerdie.g3d"/>
			<particles value="true">
				<particle-file path="blood.xml"/>
         		<particle-file path="smoke.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="100" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>


		<skill>
			<type value="stop"/>
			<name value="stop_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="90"/>
			<animation path="biker/bikerstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="600"/>
			<anim-speed value="100"/>
			<animation path="biker/bikershoot.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="harvest"/>
			<name value="oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="90"/>
			<animation path="biker/bikerstand.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="100"/>											
			<anim-speed value="60"/>
			<animation path="biker/bikerstand.g3d"/>
			<sound enabled="false"/>								
		</skill>
	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/expl.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="harvest"/>
			<name value="pump"/>
			<image path="../../../../icons/oil.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<harvest-skill value="oil_skill"/>
			<stop-loaded-skill value="stop_oil_skill"/>
			<move-loaded-skill value="move_oil_skill"/>
			<harvested-resources>
				<resource name="oil"/>										
			</harvested-resources>
			<max-load value="15"/>
			<hits-per-unit value="1"/>				
		</command>

		<command>												
			<type value="morph"/>											
			<name value="promote_officer"/>										
			<image path="../../../../icons/officer.bmp"/>	
			<unit-requirements/>											
			<upgrade-requirements>
			</upgrade-requirements>						
			<morph-skill value="morph"/>										
			<morph-unit name= "field_officer"/>									
			<discount value="0"/>											
		</command>				
	</commands>
</unit>