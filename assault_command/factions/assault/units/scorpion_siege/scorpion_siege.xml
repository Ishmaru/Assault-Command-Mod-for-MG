<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="200" regeneration="0"/>
		<max-ep value="4" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="armor_medium"/>				
		<sight value="10"/>
		<time value="20"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="10"/>
			<level name="experienced" kills="20"/>
			<level name="veteran" kills="40"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>	
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="oil" amount="500"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/scorpions.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="200" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="5"/>
			<animation path="../scorpion_assault/scorpion/scorpiondefense.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="400"/>
			<anim-speed value="70"/>
			<animation path="../scorpion_assault/scorpion/scorpionrun.g3d"/>       <particles value="true">
         <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="4"/>
			<speed value="50"/>
			<anim-speed value="50"/>
			<animation path="../scorpion_assault/scorpion/scorpiondefenseshoot.g3d"/>
			<particles value="true">
				<particle-file path="gunsmoke.xml"/> <particle-file path="grunt_mflash.xml"/> <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="true" start-time="0.3">
				<sound-file path="sounds/tank_cannon.wav"/>
			</sound>
			<attack-strenght value="4"/>
			<attack-var value="2"/>
			<attack-range value="18"/>
			<attack-type value="explosive"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/small_expl.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
			<shake enabled="true" intensity="100" duration="30" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>
		
		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="30"/>											
			<animation path="../scorpion_assault/scorpion/scorpiontransformback.g3d"/>											
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/transform2.wav"/>
			</sound>										
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="50"/>
			<animation path="../scorpion_assault/scorpion/scorpiondie.g3d"/>    <particles value="true">
         <particle-file path="smoke.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="200" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>												
			<type value="morph"/>											
			<name value="assault_mode"/>
			<image path="../../../../icons/transform.bmp"/>
			<unit-requirements/>											
			<upgrade-requirements>
			</upgrade-requirements>
			<ignore-resource-requirements value="true" />							
			<morph-skill value="morph"/>											
			<morph-unit name= "scorpion_assault"/>
				<ignore-resource-requirements value="true" />
			<discount value="0"/>											
		</command>

	</commands>
</unit>