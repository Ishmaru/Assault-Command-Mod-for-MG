<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="150" regeneration="0"/>
		<max-ep value="10" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="armor_light"/>				
		<sight value="15"/>
		<time value="10"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="3"/>
			<level name="experienced" kills="6"/>
			<level name="veteran" kills="12"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>	
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="200"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/recon.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="50" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="10"/>
			<animation path="ifv/ifvstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="600"/>
			<anim-speed value="125"/>
			<animation path="ifv/ifvrun.g3d"/>       <particles value="true">
         <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false">
			</sound>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="100"/>
			<animation path="ifv/ifvshoot.g3d"/>
			<particles value="true" start-time="0.1" end-time="0.75">
				<particle-file path="gun_muzzle.xml"/>
				<particle-file path="grunt_mflash.xml"/>
			</particles>
			<sound enabled="true" start-time="0.20">
				<sound-file path="/sounds/shoot.wav"/>

			</sound>
			<attack-strenght value="2"/>
			<attack-var value="2"/>
			<attack-range value="6"/>
			<attack-type value="hmg"/>
			<attack-start-time value="0.60"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="gun_hit.xml"/>
			</splash>
		</skill>

		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="80"/>
			<animation path="ifv/ifvdie.g3d"/>       <particles value="true">
         <particle-file path="smoke.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="200" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>
		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="1000" />
			<anim-speed value="100" />
			<animation path="ifv/ifvstand.g3d" />
			<sound enabled="false" />
		</skill>

	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/bullet.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>	

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="e_m_p_burst"/>
			<image path="../../../../icons/emp.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="e_m_p"/>
		</command>	

		
	</commands>
</unit>