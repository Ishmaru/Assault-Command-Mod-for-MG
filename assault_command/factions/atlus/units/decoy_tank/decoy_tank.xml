<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="20" regeneration="-1"/>
		<max-ep value="4" regeneration="1"/>
		<count-unit-death-in-stats value="false" />
		<count-unit-production-in-stats value="false" />
		<count-unit-kill-in-stats value="false" />
		<armor value="0"/>	
		<armor-type value="na"/>				
		<sight value="0"/>
		<time value="1"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>	
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="50"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/decoy.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<tags>
			<tag value="none" />
   		</tags>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="5"/>
			<animation path="tank/tankstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="60"/>
			<animation path="tank/tankrun.g3d"/>       <particles value="true">
         <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>


 
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="4"/>
			<speed value="300"/>
			<anim-speed value="5"/>
			<animation path="tank/tankstand.g3d"/>
			<!-- <particles value="true"><particle-file path="gunsmoke.xml"/> <particle-file path="grunt_mflash.xml"/> <particle-file path="dust.xml"/></particles> -->
			<sound enabled="true" start-time="0.1">
				<!-- <sound-file path="/sounds/tank_cannon.wav"/> -->
			</sound>
			<attack-strenght value="0"/>
			<attack-var value="0"/>
			<attack-range value="2"/>
			<attack-type value="na"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="50"/>
			<animation path="tank/tankdie2.g3d"/>
			<!-- <particles value="true"><particle-file path="smoke.xml"/> <particle-file path="expl_small.xml"/></particles> -->
			<sound enabled="false"/>			
			<fade value="false"/>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/expl.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>



		
	</commands>
</unit>