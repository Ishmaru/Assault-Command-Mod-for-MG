<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="3"/>
		<height value="1"/>
		<max-hp value="500" regeneration="1"/>
		<max-ep value="0" regeneration="0"/>
		<armor value="0"/>	
		<armor-type value="armor_medium"/>				
		<sight value="10"/>
		<time value="25"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>	
					<resource name="oil" amount="900" />			
		</resource-requirements>
		<resources-stored>
			<resource name="oil" amount="100"/>
		</resources-stored>
		<image path="../../../../icons/gatherer.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="500" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="100"/>
			<animation path="transport/transportstand.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="60"/>
			<animation path="transport/transportrun.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="100"/>
			<animation path="transport/transportstand.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="60"/>
			<animation path="transport/transportrun.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="100"/>
			<anim-speed value="100"/>
			<animation path="transport/transportdie.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>				
			<fade value="false"/>
			<shake enabled="true" intensity="7500" duration="100" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>

		<skill>
			<type value="harvest"/>
			<name value="oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="100"/>
			<animation path="transport/transportstand.g3d"/>
			<particles value="true">
         		<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>

		</skill>
		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="200" />
			<anim-speed value="100" />
			<animation path="transport/transportstand.g3d" />
			<sound enabled="false" />
		</skill>
	</skills>



	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>
		<command>
			<type value="harvest"/>
			<name value="pump"/>
			<image path="../../../../icons/oil.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<harvest-skill value="oil_skill"/>
			<stop-loaded-skill value="stop_oil_skill"/>
			<move-loaded-skill value="move_oil_skill"/>
			<harvested-resources>
				<resource name="oil"/>										
			</harvested-resources>
			<max-load value="300"/>
			<hits-per-unit value="1"/>				
		</command>
		<command>
			<type value="produce"/>
			<name value="deploy_grunt" />
			<image path="../../../../icons/grunt2.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="grunt"/>
		</command>
	</commands>
</unit>