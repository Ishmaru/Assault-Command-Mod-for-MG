<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="100" regeneration="0"/>
		<max-ep value="4" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="armor_medium"/>				
		<sight value="15"/>
		<time value="20"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="4"/>
			<level name="experienced" kills="8"/>
			<level name="veteran" kills="16"/>
		</levels>
		<fields>
			<field value="air"/>
		</fields>	
		<properties>	
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="750"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/viper.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="200" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="100"/>
			<animation path="sol/gunshipstand.g3d"/>
			<particles value="true" start-time="0.1" end-time="0.75">
				<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="550"/>
			<anim-speed value="100"/>
			<animation path="sol/gunshiprun.g3d"/>       
			<particles value="true">
				<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false">
			</sound>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="4"/>
			<speed value="150"/>
			<anim-speed value="150"/>
			<animation path="sol/gunshipshoot.g3d"/>
			<particles value="true">
				<particle-file path="dust.xml"/>
			</particles>
			<sound enabled="true" start-time="0.25">
				<sound-file path="/sounds/missle_.wav"/>
			</sound>
			<sound enabled="true" start-time="0.75">
				<sound-file path="/sounds/missle_.wav"/>
			</sound>
			<attack-strenght value="4"/>
			<attack-var value="3"/>
			<attack-range value="6"/>
			<attack-type value="energy"/>
			<attack-start-time value="0.0"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectiles>
				<projectile attack-start-time="0.15" damage-percentage="100">	
					<particle value="true" path="particle_proj.xml"/>
					<hitsound enabled="false"/>
				</projectile>
			</projectiles>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>



		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="80"/>
			<animation path="sol/gunshipdie.g3d"/>       <particles value="true">
         <particle-file path="smoke.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="200" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/expl.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>	

		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>		
	</commands>
</unit>