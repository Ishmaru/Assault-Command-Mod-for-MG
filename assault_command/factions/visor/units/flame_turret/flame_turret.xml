<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<count-in-victory-conditions value="false"/>
		<size value="2"/>
		<height value="2"/>
		<max-hp value="125" regeneration="0"/>
		<max-ep value="10" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="armor_medium"/>				
		<sight value="10"/>
		<time value="10"/>	
		<multi-selection value="false"/>	
		<cellmap value="false"/>
		<levels>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="100"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/fturret.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="50" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="10"/>
			<animation path="fturret/fturretstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="600"/>
			<anim-speed value="125"/>
			<animation path="fturret/fturretstand.g3d"/>
			<sound enabled="false">
			</sound>
		</skill>

		<skill>
			<type value="be_built" />	
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="1" />
			<animation path="fturret/fturretstand.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="fturret/fturretshoot.g3d"/>
			<particles value="true">
				<particle-file path="flame.xml"/>
			</particles>
			<sound enabled="true" start-time="0.20">
				<sound-file path="sounds/burn.wav"/>
			</sound>
			<attack-strenght value="1"/>
			<attack-var value="1"/>
			<attack-range value="9"/>
			<attack-type value="flame"/>
			<attack-start-time value="0.2"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="false"/>
				<particle value="false"/>
			</splash>
		</skill>

		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="80"/>
			<animation path="fturret/fturretdie.g3d"/>       <particles value="true">
         <particle-file path="smoke.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="200" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>

		<command>
			<type value="attack_stopped"/>
			<name value="on"/>
			<image path="../../../../icons/flame.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value= "stop"/>
			<name value="off"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		
	</commands>
</unit>