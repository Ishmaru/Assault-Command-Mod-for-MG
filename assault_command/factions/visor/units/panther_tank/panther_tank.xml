<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="2"/>
		<height value="3"/>
		<max-hp value="300" regeneration="0"/>
		<max-ep value="4" regeneration="1"/>
		<armor value="0"/>	
		<armor-type value="armor_heavy"/>				
		<sight value="10"/>
		<time value="15"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="4"/>
			<level name="experienced" kills="8"/>
			<level name="veteran" kills="16"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="rotated_climb"/>	
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>
			<resource name="oil" amount="600"/>				
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/panther.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="200" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="500"/>
			<anim-speed value="5"/>
			<animation path="tank/tankstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="60"/>
			<animation path="tank/tankrun.g3d"/>       <particles value="true">
         <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="false"/>
		</skill>


 
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="4"/>
			<speed value="300"/>
			<anim-speed value="160"/>
			<animation path="tank/tankshoot.g3d"/>    <particles value="true">
         <particle-file path="gunsmoke.xml"/> <particle-file path="grunt_mflash.xml"/> <particle-file path="dust.xml"/>
			</particles>
			<sound enabled="true" start-time="0.1">
				<sound-file path="/sounds/tank_cannon.wav"/>

			</sound>
			<attack-strenght value="2"/>
			<attack-var value="2"/>
			<attack-range value="7"/>
			<attack-type value="explosive"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
			<shake enabled="true" intensity="100" duration="30" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="50"/>
			<animation path="tank/tankdie2.g3d"/>    <particles value="true">
         <particle-file path="smoke.xml"/>  <particle-file path="expl_small.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/tank_destroy_2.wav"/>
			</sound>			
			<fade value="false"/>
			<shake enabled="true" intensity="200" duration="50" start-time="0.0">
				<self enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<team enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
				<enemy enabled="true" visible="true" in-camera-view="false" camera-distance-affected="true"/>
			</shake>
		</skill>


	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/expl.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>



		
	</commands>
</unit>