<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="100" regeneration="2"/>
		<max-ep value="30" regeneration="1"/>
		<armor value="1"/>	
		<armor-type value="infantry"/>				
		<sight value="10"/>
		<time value="3"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="2"/>
			<level name="experienced" kills="4"/>
			<level name="veteran" kills="8"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>	
					<resource name="oil" amount="75" />			
		</resource-requirements>
		<resources-stored/>
		<image path="../../../../icons/blackops.bmp"/>
		<image-cancel path="../../../../icons/stop.bmp"/>"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
		<resources-death>
            <resource name="oil" amount-value="25" />
        </resources-death>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="15"/>
			<animation path="troop/troopstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="270"/>
			<anim-speed value="150"/>
			<animation path="troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="run_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="175"/>
			<animation path="troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="60"/>
			<animation path="troop/troopshoot2.g3d"/>
			<particles value="true" start-time="0.2" end-time="0.45">
				<particle-file path="gun_muzzle.xml"/>
				<particle-file path="grunt_mflash.xml"/>
			</particles>
			<sound enabled="true" start-time="0.2">
				<sound-file path="/sounds/shoot.wav"/>

			</sound>
			<attack-strenght value="3"/>
			<attack-var value="3"/>
			<attack-range value="7"/>
			<attack-type value="bullet"/>
			<attack-start-time value="0.25"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="gun_hit.xml"/>
			</splash>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="bomb_skill"/>		
			<ep-cost value="30"/>
			<speed value="30"/>
			<anim-speed value="30"/>
			<animation path="troop/troopbomb.g3d"/>
			<sound enabled="true" start-time="0.99">
				<sound-file path="/sounds/bombbeep.wav"/>

			</sound>
			<attack-strenght value="40"/>
			<attack-var value="0"/>
			<attack-range value="1"/>
			<attack-type value="explosive"/>
			<attack-start-time value="0.99"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>

		<skill>
			<type value="repair"/>
			<name value="fix_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="/troop/troopbomb.g3d"/>
			<sound enabled="true" start-time="0.5">
			</sound>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="90"/>
			<animation path="/troop/troopstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="270"/>
			<anim-speed value="150"/>
			<animation path="/troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="70"/>
			<animation path="troop/troopdie2.g3d"/>
			<sound enabled="true" start-time="0">
			</sound>			
			<fade value="false"/>
		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="100"/>											
			<anim-speed value="60"/>
			<animation path="troop/troopbomb.g3d"/>
			<sound enabled="false"/>								
		</skill>

		<skill>
			<type value="harvest"/>
			<name value="oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="225"/>
			<anim-speed value="90"/>
			<animation path="troop/troopbomb.g3d"/>
			<sound enabled="false"/>

		</skill>

		<skill>
			<type value="build"/>
			<name value="build_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="troop/troopbomb.g3d"/>
			<particles value="false"/>
			<sound enabled="true" start-time="0.5">
			</sound>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="1000" />
			<anim-speed value="100" />
			<animation path="troop/troopbomb.g3d" />
			<sound enabled="false" />
		</skill>
	</skills>

	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="../../../../icons/stop.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="../../../../icons/move.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="harvest"/>
			<name value="pump"/>
			<image path="../../../../icons/oil.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<harvest-skill value="oil_skill"/>
			<stop-loaded-skill value="stop_oil_skill"/>
			<move-loaded-skill value="move_oil_skill"/>
			<harvested-resources>
				<resource name="oil"/>										
			</harvested-resources>
			<max-load value="15"/>
			<hits-per-unit value="1"/>				
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/bullet.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>


		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="../../../../icons/hold.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		<command>
			<type value="produce"/>
			<name value="smoke_screen" />
			<image path="../../../../icons/smoke.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="smoke_screen"/>
		</command>	
		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../../../icons/expl.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="bomb_skill"/>
		</command>
		<command>
			<type value= "build"/>
			<name value="build_defense"/>
			<image path="../../../../icons/build.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<build-skill value="build_skill"/>
			<buildings>	
				<building name="sentry_gun"/>
				<building name="energy_cannon"/>
			</buildings>
			<start-sound enabled="false"/>
			<built-sound enabled="true">							
			</built-sound>	
		</command>	
		<command>
			<type value="repair"/>
			<name value="repair_tank"/>
			<image path="../../../../icons/repair.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<repair-skill value="fix_skill"/>
			<repaired-units>
				<unit name="command_h_q"/>
				<unit name="mobile_base"/>
				<unit name="sentry_gun"/>
				<unit name="energy_cannon"/>
				<unit name="i_f_v"/>
				<unit name="stalker"/>
				<unit name="recon"/>
				<unit name="battle_tank"/>	
				<unit name="cobra_m_r_l_s"/>		
			</repaired-units>		
		</command>

		<command>												
			<type value="morph"/>											
			<name value="promote_officer"/>										
			<image path="../../../../icons/officer.bmp"/>	
			<unit-requirements/>											
			<upgrade-requirements>
			</upgrade-requirements>						
			<morph-skill value="morph"/>										
			<morph-unit name= "field_officer"/>									
			<discount value="0"/>											
		</command>		
	</commands>
</unit>