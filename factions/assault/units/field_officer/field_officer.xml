<?xml version="1.0" standalone="no"?>

<unit>

	<!-- *** parameters *** -->

	<parameters>
		<size value="1"/>
		<height value="2"/>
		<max-hp value="100" regeneration="1"/>
		<max-ep value="30" regeneration="1"/>
		<armor value="2"/>	
		<armor-type value="infantry"/>				
		<sight value="10"/>
		<time value="1"/>	
		<multi-selection value="true"/>	
		<cellmap value="false"/>
		<levels>
			<level name="rookie" kills="2"/>
			<level name="experienced" kills="4"/>
			<level name="veteran" kills="8"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		<resource-requirements>	
					<resource name="oil" amount="500" />			
		</resource-requirements>
		<resources-stored/>
		<image path="images/troop.bmp"/>
		<image-cancel path="/images/null.bmp"/>"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
		</selection-sounds>
		<command-sounds enabled="true">
		</command-sounds>
	</parameters>


	<!-- *** skills *** -->

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="15"/>
			<animation path="troop/troopstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="0"/>
			<speed value="270"/>
			<anim-speed value="150"/>
			<animation path="troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="run_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="175"/>
			<animation path="troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="60"/>
			<animation path="troop/troopshoot2.g3d"/>
			<sound enabled="true" start-time="0.2">
				<sound-file path="/sounds/shoot.wav"/>

			</sound>
			<attack-strenght value="2"/>
			<attack-var value="2"/>
			<attack-range value="8"/>
			<attack-type value="bullet"/>
			<attack-start-time value="0.25"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="false"/>
		</skill>


		<skill>
			<type value="attack"/>
			<name value="bomb_skill"/>		
			<ep-cost value="30"/>
			<speed value="30"/>
			<anim-speed value="30"/>
			<animation path="troop/troopbomb.g3d"/>
			<sound enabled="true" start-time="0.99">
				<sound-file path="/sounds/bombbeep.wav"/>

			</sound>
			<attack-strenght value="1500"/>
			<attack-var value="0"/>
			<attack-range value="1"/>
			<attack-type value="bullet"/>
			<attack-start-time value="0.99"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>

			</splash>
		</skill>

		<skill>
			<type value="repair"/>
			<name value="fix_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="/troop/troopbomb.g3d"/>
			<sound enabled="true" start-time="0.5">
			</sound>
		</skill>

		<skill>
			<type value="stop"/>
			<name value="stop_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="105"/>
			<anim-speed value="90"/>
			<animation path="/troop/troopstand.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="270"/>
			<anim-speed value="150"/>
			<animation path="/troop/trooprun.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="70"/>
			<animation path="troop/troopdie2.g3d"/>
			<sound enabled="true" start-time="0">
			</sound>			
			<fade value="false"/>
		</skill>


		<skill>
			<type value="harvest"/>
			<name value="oil_skill"/>		
			<ep-cost value="0"/>
			<speed value="225"/>
			<anim-speed value="90"/>
			<animation path="troop/troopbomb.g3d"/>
			<sound enabled="false"/>

		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="100"/>											
			<anim-speed value="60"/>
			<animation path="troop/troopbomb.g3d"/>
			<anim-progress-bound value="true"/>	
			<sound enabled="false"/>								
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>	
			<ep-cost value="0" />
			<speed value="1000" />
			<anim-speed value="100" />
			<animation path="troop/troopbomb.g3d" />
			<sound enabled="false" />
		</skill>	


	</skills>



	<!-- *** commands *** -->
	
	<commands>
		
		<command>
			<type value= "stop"/>
			<name value="stop"/>
			<image path="/images/null.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="move"/>
			<name value="move"/>
			<image path="/images/null.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="/images/null.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>
			<type value="attack_stopped"/>
			<name value="hold_position"/>
			<image path="/images/null.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
			<attack-skill value="attack_skill"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="fire_at_will" />
			<image path="../grunt/images/troop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="attack"/>
		</command>
	
		<command>
			<type value="produce"/>
			<name value="take_cover" />
			<image path="../grunt/images/troop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="defense"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="take_aim" />
			<image path="../grunt/images/troop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="range"/>
		</command>
		<command>
			<type value="produce"/>
			<name value="fix_em_up" />
			<image path="../grunt/images/troop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="repair"/>
		</command>	
		<command>
			<type value="produce"/>
			<name value="overtime" />
			<image path="../grunt/images/troop.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="production"/>
		</command>	
	</commands>
</unit>